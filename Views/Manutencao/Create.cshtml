@model ManutencaoModel
@{
    ViewData["Title"] = "Adicionar Tipo de Manutenção";
}
<div class="">

    <h1 class="display-4">Cadastrar Tipo de Manutenção</h1>

    <form asp-controller="Manutencao" asp-action="Create" method="post">

        <div class="form-group">
            <label for="nome">Nome</label>
            <input for="uppercase" type="text" asp-for="TipoManutencao" class="form-control">
            @Html.ValidationMessageFor(x => x.TipoManutencao)
        </div> 
        <div class="form-group">
            <label for="valor">Valor</label>
            <input for="uppercase" type="number" asp-for="Custo" class="form-control">
            @Html.ValidationMessageFor(x => x.Custo)
        </div>
            <br />
            <button type="submit" class="btn btn-primary">Adicionar</button>
        <a class="btn btn-secondary" asp-controller="Manutencao" asp-action="Index" role="button"> Voltar</a>
    </form>

</div>
