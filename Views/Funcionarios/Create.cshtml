@model FuncionariosModel
@{
    ViewData["Title"] = "Adicionar Funcionario";
}
<div class="">

    <h1 class="display-4">Cadastrar Funcionario</h1>

    <form asp-controller="Funcionarios" asp-action="Create" method="post">

        <div class="container form-group">
            <div class="row">
                <div class="col-sm">
                    <label for="nome">Nome</label>
                    <input for="uppercase" type="text" asp-for="NomeFuncionario" class="form-control">
                    @Html.ValidationMessageFor(x => x.NomeFuncionario)
                </div> 
                <div class="col-sm">
                    <label for="matricula">Matricula</label>
                    <input for="uppercase" type="number" asp-for="Matricula" class="form-control">
                    @Html.ValidationMessageFor(x => x.Matricula)
                </div>
                <div class="col-sm">
                    @Html.LabelFor(model => model.CargoId, "Cargos", new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.CargoId, ViewBag.Cargos as SelectList, "Selecione...", new { @class = "form-control" })
                </div> 
                <div class="col-sm">
                    @Html.LabelFor(model => model.DepartamentoId, "Departamentos", new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.DepartamentoId, ViewBag.Departamentos as SelectList, "Selecione...", new { @class = "form-control" })
                </div>

            </div>

            <br />
            <button type="submit" class="btn btn-primary">Adicionar</button>
            <a class="btn btn-secondary" asp-controller="Funcionarios" asp-action="Index" role="button"> Voltar</a>
    </form>

</div>
