@model List<FuncionariosModel>
@{
    ViewData["Title"] = "Lista de Funcionarios";
}
<div class="text-center">


    <br />
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger  btn-close" arial-label="close"></button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger  btn-close" arial-label="close"></button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />
    <h1 class="display-4 text-start">Funcionarios</h1>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary" role="button" asp-controller="Funcionarios" asp-action="Create">Adicionar Funcionario</a>
    </div>
    <br />

    <table id="tabela" class="table">
        <thead class="table-dark">

            <tr>
                <th class="text-center" scope="col">Nome</th>
                <th class="text-center" scope="col">Matricula</th>              
                <th class="text-center" scope="col">Cargo</th>
                <th class="text-center" scope="col">Departamento</th>
                <th class="text-center" scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (FuncionariosModel funcionarios in Model)
                {
                    <tr>
                        <input type="hidden" @funcionarios.Id />
                        <input type="hidden" @funcionarios.CargoId />
                        <input type="hidden" @funcionarios.DepartamentoId />
                        <td class="text-center">@funcionarios.NomeFuncionario</td>
                        <td class="text-center">@funcionarios.Matricula</td>
                        <td class="text-center">@funcionarios.Cargo.NomeCargo</td>
                        <td class="text-center">@funcionarios.Departamento.NomeDepartamento</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-warning" asp-route-id="@funcionarios.Id" asp-controller="Funcionarios" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@funcionarios.Id" data-toggle="modal" data-target="#myModal_@funcionarios.Id">Excluir</a>
                            </div>
                        </td>
                    </tr>

                    <div class="modal" id="myModal_@funcionarios.Id">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <!-- Cabeçalho do Modal -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Excluir Funcionario</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>

                                <!-- Corpo do Modal -->
                                <div class="modal-body">
                                    <p>Deseja realmente excluir o Funcionario @funcionarios.NomeFuncionario ?</p>
                                </div>

                                <!-- Rodapé do Modal -->
                                <div class="modal-footer">
                                    <!-- Botão de cancelar -->
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                    <!-- Botão de confirmar -->
                                    <a role="button" class="btn btn-danger" id="confirmDelete_@funcionarios.Id" asp-route-id="@funcionarios.Id" asp-controller="Funcionarios" asp-action="Delete">Confirma</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </tbody>
    </table>

</div>
