@model CargoModel
@{
    ViewData["Title"] = "Adicionar Cargo";
}
<div class="">

    <h1 class="display-4">Cadastrar Cargo</h1>

    <form asp-controller="Cargo" asp-action="Create" method="post">

        <div class="form-group">
            <label for="nome">Nome</label>
            <input for="uppercase" type="text" asp-for="NomeCargo" class="form-control">
            @Html.ValidationMessageFor(x => x.NomeCargo)
           
            <br />
            <button type="submit" class="btn btn-primary">Adicionar</button>
            <a class="btn btn-secondary" asp-controller="Cargo" asp-action="Index" role="button"> Voltar</a>
    </form>

</div>
